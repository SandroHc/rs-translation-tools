extends layout

block content
  p
    center
      strong Found #{total} results for '#{search}'

  each list, category in results
    h2.category(uk-sticky='offset: 80')= category

    .uk-overflow-auto
      table.uk-table.uk-table-small.uk-table-divider.uk-table-hover
        thead
          tr
            th(title='English') EN
            th(title='German') DE
            th(title='French') FR
            th(title='Portuguese') PT
        tbody
          each val in list
            tr
              td.uk-text-truncate(title=val.en)= val.en
              td.uk-text-truncate(title=val.de)= val.de
              td.uk-text-truncate(title=val.fr)= val.fr
              td.uk-text-truncate(title=val.pt)= val.pt