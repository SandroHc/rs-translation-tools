  body


  header
    div(uk-sticky="sel-target: .uk-navbar-container; cls-active: uk-navbar-sticky")
      nav.uk-navbar-container
        .uk-container
          .uk-navbar

            .uk-navbar-left
              a.uk-navbar-item.uk-logo(href="/") Translation Tools

            .uk-navbar-right
              form.uk-search.uk-search-navbar(method='GET', action='/search')
                ul.uk-navbar-nav
                  li
                    span(uk-search-icon)
                    input.uk-search-input.uk-search-navbar(id="text", name="text", type="search", placeholder="Search...", autofocus, value=(search || ''))
                  li
                    span(uk-icon="cog")

  main
    .uk-container
      block content
