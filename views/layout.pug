                li
                  a(href="/import") Importer

            .uk-navbar-right
              form.uk-search.uk-search-navbar(method='GET', action='/search')
                ul.uk-navbar-nav
                  li
                    span(uk-search-icon)
                    input.uk-search-input.uk-search-navbar(id="text", name="text", type="search", placeholder="Search...")
                  li
                    span(uk-icon="cog")

  main
    .uk-container
      block content
